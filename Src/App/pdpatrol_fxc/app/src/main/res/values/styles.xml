<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 标题栏 -->
    <style name="title">
        <item name="android:textColor">@color/actionbar</item>
    </style>

    <!--标题栏左按钮-->
    <style name="title_left_btn" parent="title">
        <item name="android:layout_marginLeft">@dimen/title_left_btn_margin_left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/title_btn_width</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@mipmap/common_expand_button</item>
    </style>

    <!-- 标题栏图片 -->
    <style name="title_image">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <!--&lt;!&ndash;标题栏右按钮&ndash;&gt;-->
